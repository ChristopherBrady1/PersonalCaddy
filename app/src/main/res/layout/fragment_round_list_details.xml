<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <TextView
        android:id="@+id/courseNameHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Course Name"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/courseNameHeading"
        android:id="@+id/layoutHead">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateCoursePlayedTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Date: " />

            <TextView
                android:id="@+id/dateCoursePlayed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider1"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/parHoleLabelTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight=".25"
                android:text="Course Par: " />

            <TextView
                android:id="@+id/parHoleLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreShotTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Score: " />
            <TextView
                android:id="@+id/scoreShot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/totalPuttsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Total Putts:"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/totalPutts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/GIRLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Greens in Reg: " />

            <TextView
                android:id="@+id/GIR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/FIRLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Fairways hit: "
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/FIR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                tools:text="10/01/2020"
                android:textAlignment="textEnd"
                android:paddingEnd="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Listheader"
        app:layout_constraintTop_toBottomOf="@+id/layoutHead">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Hole: "
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAllCaps="true"/>

        <View
            android:id="@+id/divider4"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:text="Hole Details: "
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textAllCaps="true"/>
    </LinearLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Listheader"/>

    <ListView
        android:id="@+id/holeList"
        android:layout_width="match_parent"
        android:layout_height="587dp"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        tools:layout_editor_absoluteX="1dp">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>