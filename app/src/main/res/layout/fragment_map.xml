<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:foregroundTint="#FFFFFF"
    android:textAlignment="center"
    tools:context=".MainActivity"
    android:background="@color/background">


    <fragment
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        android:id="@+id/topBar">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Hole"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/holeNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Shots"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/shotNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceButton"
                android:textSize="22dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/distanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".35"
            android:gravity="center"
            android:text="Distance:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".35"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="100 yards" />

    </LinearLayout>


    <Button
        android:id="@+id/confirmShot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="132dp"
        android:backgroundTint="@color/teal_200"
        android:text="Confirm Shot"
        android:textColor="@color/black"
        android:visibility="invisible" />


    <Button
        android:id="@+id/addShotPutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="297dp"
        android:backgroundTint="@color/teal_200"
        android:text="+ 1 Putt"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/shotMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="405dp"
        android:backgroundTint="@color/teal_200"
        android:text="Return to Shot Mode"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addMarkerTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Add Marker"
                android:textSize="10sp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Putt Mode"
                android:textSize="10sp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AR Mode"
                android:textSize="10sp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Scorecard"
                android:textSize="10sp"
                android:textColor="@color/teal_200"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="End Round"
                android:textSize="10sp"
                android:textColor="@color/teal_200"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/addMarker"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pin" />

            <ImageButton
                android:id="@+id/puttMode"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/putter" />


            <Button
                android:id="@+id/ArButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:text="AR"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <ImageButton
                android:id="@+id/scorecardButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/scorecard" />

            <ImageButton
                android:id="@+id/finishRoundButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/teal_200"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/finish_flag" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/nextHoleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Hole"
        android:layout_below="@+id/topBar"
        android:backgroundTint="@color/teal_200"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginLeft="1dp"/>


    <!-- target="_blank" href="https://icons8.com/icons/set/golf-club">Golf Club icon by target="_blank" href="https://icons8.com">Icons8-->

</RelativeLayout>